<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: #dc3545; 
        }

       .navbar a {
                color: white !important; 
       }

       .navbar a:hover {
                    color: #f8f9fa !important; 
       }
       .dropdown-menu {
            background-color: #dc3545; 
       }

       .dropdown-item {
            color: white; 
       }

       .dropdown-item:hover {
                background-color: #c82333;
                color: white; 
       }

        .chat-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 60px;
            height: 60px;
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1000;
        }

        .chat-container {
            display: none;
            position: fixed;
            bottom: 90px;
            right: 20px;
            max-width: 400px;
            width: 100%;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            display: none;
            z-index: 1000;
        }

        .chat-header {
            background-color: #dc3545;
            color: white;
            padding: 10px;
            text-align: center;
        }

        .chat-messages {
            max-height: 300px;
            overflow-y: auto;
            padding: 10px;
        }

        .message {
            margin-bottom: 10px;
        }

            .message.user {
                text-align: right;
            }

                .message.user .msg {
                    background-color: #dc3545;
                    color: white;
                }

            .message.other .msg {
                background-color: #e9ecef;
            }

        .msg {
            display: inline-block;
            padding: 10px 15px;
            border-radius: 20px;
            max-width: 80%;
            word-wrap: break-word;
        }

        .chat-input {
            display: flex;
            padding: 10px;
            border-top: 1px solid #dee2e6;
        }

            .chat-input input {
                flex: 1;
                border: 1px solid #dee2e6;
                border-radius: 20px;
                padding: 10px;
                margin-right: 10px;
            }

            .chat-input button {
                border: none;
                background-color: #dc3545;
                color: white;
                border-radius: 20px;
                padding: 10px 15px;
                cursor: pointer;
            }

        #scrollToTop {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            z-index: 1000;
            font-size: 20px;
        }

            #scrollToTop:hover {
                background-color: #c82333;
            }

    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand d-flex align-items-center" href="/Home">
            <img src="~/images/site-icon.jpg" alt="Site Icon" style="width: 60px; height: 60px; margin-right: 8px; border-radius: 50%;">
            <span style="font-size: 25px;">ChefYourself</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav mr-auto">
                <!-- Kategoriler Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Categories
                    </a>
                    <div class="dropdown-menu" aria-labelledby="categoriesDropdown">
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var category in ViewBag.Categories)
                            {
                                <a class="dropdown-item" href="/Home/CategoryRecipes?categoryId=@category.Id">@category.Name</a>
                            }
                        }
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/ShoppingList/Index">Ingredient List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/RecipeBook/Index">Recipe Book</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/images/user-icon.jpg" alt="User Icon" class="rounded-circle" style="width: 40px; height: 40px;">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="/Identity/Account/Manage">My Profile</a>
                        <a class="dropdown-item" href="/Identity/Account/Logout">Log Out</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <div class="chat-button" id="chatButton">
        <i class="fas fa-comment"></i>
    </div>

    <!-- Chat Widget -->
    <div class="chat-container" id="chatContainer">
        <div class="chat-header">Chat</div>
        <div class="chat-messages" id="chatMessages">
            <div class="message other">
                <div class="msg">Hello! How can I help you?</div>
            </div>
        </div>
        <div class="chat-input">
            <input type="text" id="messageInput" placeholder="Enter your message..">
            <button id="sendButton">Submit</button>
        </div>
    </div>

    <button id="scrollToTop" style="display: none; margin-right:70px;">
        <i class="fas fa-chevron-up"></i>
    </button>

    @* <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
    $(document).ready(function () {
        $(".favorite-btn").on("click", function () {
            var button = $(this); 
            var recipeId = button.data("recipe-id");

            $.post("/Home/AddOrRemoveFavorite", { recipeId: recipeId }, function (response) {
                if (response.success) {
                    if (response.action === "added") {
                        button.find(".favorite-icon").removeClass("far").addClass("fas"); // Dolu kalp
                    } else if (response.action === "removed") {
                        button.find(".favorite-icon").removeClass("fas").addClass("far"); // Boş kalp
                    }
                } else {
                    alert("An error occurred while processing your request.");
                }
            }).fail(function () {
                alert("Failed to communicate with the server.");
            });
        });
    });
</script>

    <script>
        $(document).ready(function () {
            $('#productSearch').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('.product-item').filter(function () { 
                    $(this).toggle($(this).attr('data-name').toLowerCase().indexOf(value) > -1);
                });
            });
        });

    </script>
    <!-- Chat Script -->
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const chatButton = document.getElementById('chatButton');
            const chatContainer = document.getElementById('chatContainer');
            const sendButton = document.getElementById('sendButton');
            const messageInput = document.getElementById('messageInput');
            const chatMessages = document.getElementById('chatMessages');

            // Chat butonunu aç/kapat
            chatButton.addEventListener('click', function () {
                chatContainer.style.display = chatContainer.style.display === 'block' ? 'none' : 'block';
            });

            // Mesaj gönderme işlemi
            sendButton.addEventListener('click', sendMessage);
            messageInput.addEventListener('keypress', function (event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    sendMessage();
                }
            });

            async function sendMessage() {
                const userMessage = messageInput.value.trim();

                if (userMessage) {
                    const userMessageDiv = document.createElement('div');
                    userMessageDiv.className = 'message user';
                    userMessageDiv.innerHTML = `<div class="msg">${userMessage}</div>`;
                    chatMessages.appendChild(userMessageDiv);
                    chatMessages.scrollTop = chatMessages.scrollHeight;

                    messageInput.value = '';

                    try {
                        // Backend'e mesaj gönder
                        const response = await fetch('/api/Chat/sendMessage', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ message: userMessage })
                        });

                        if (response.ok) {
                            const data = await response.json();

                            const botMessageDiv = document.createElement('div');
                            botMessageDiv.className = 'message other';
                            botMessageDiv.innerHTML = `<div class="msg">${data.response}</div>`;
                            chatMessages.appendChild(botMessageDiv);

                            chatMessages.scrollTop = chatMessages.scrollHeight;
                        } else {
                            console.error("Error: Failed to fetch the server response.");
                        }
                    } catch (error) {
                        console.error("Error:", error);
                    }
                }
            }

        });


    </script>

    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop() > 200) {
                    $('#scrollToTop').fadeIn(); 
                } else {
                    $('#scrollToTop').fadeOut(); 
                }
            });

            // Butona tıklayınca sayfanın en üstüne git
            $('#scrollToTop').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 'slow'); 
                return false;
            });
        });
    </script>
    
</body>
</html>
